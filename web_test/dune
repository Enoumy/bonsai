(library (name bonsai_web_test)
 (libraries bonsai_web core_kernel expect_test_helpers_core incr_map
  virtual_dom.vdom_test_helpers)
 (preprocess
  (pps ppx_jane ppx_pattern_bind -annotated-ignores -check-doc-comments)))

(rule (targets test_bonsai.ml) (deps ../../bonsai/test/test_bonsai.ml)
 (action (bash "cp %{deps} %{targets}")))

(rule (targets test_bonsai.mli) (deps ../../bonsai/test/test_bonsai.mli)
 (action (bash "cp %{deps} %{targets}")))

(alias (name DEFAULT) (deps test_bonsai.ml test_bonsai.mli))